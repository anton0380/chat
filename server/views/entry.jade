extends layout
block content
    .container
        h1 Вход
        p  Введите данные:
        form.form-entry(method='post' action='/reg')
            fieldset
                .form-group
                    label(for='login') Логин
                    input#login.form-control(name='login' type='text' required='' autofocus='')
                .form-group
                    label(for='password') Пароль
                    input#password.form-control(name='password' type='password' required='')
                .form-group
                    button.btn.btn-primary(type='submit') Войти
        
